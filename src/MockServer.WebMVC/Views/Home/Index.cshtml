@using Microsoft.AspNetCore.Authentication
@using MockServer.WebMVC.Extentions
@using MockServer.Core.Models
@{
    ViewData["Title"] = "Home Page";
    var user = User.Parse<ApplicationUser>();
}
@if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
    <h1 class="display-4">Welcome, <span>@user.Username</span></h1>
</div>
}
else
{
    <div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
}
<style>
    #resource p {
        display: block;
    }

    #resource form {
        display: none;
    }

    #resource.edit-mode p {
        display: none;
    }

    #resource.edit-mode form {
        display: block;
    }
</style>
<div id="resource">
    <div id="resource">
        <p>This is the resource. It is currently in view mode.</p>
        <form style="display: none;">
            <label>Edit the resource:</label>
            <input type="text" name="resource-input">
            <br>
            <label>Select a category:</label>
            <select name="category-select">
                <option value="Option 1">Option 1</option>
                <option value="Option 2">Option 2</option>
                <option value="Option 3">Option 3</option>
            </select>
            <br>
            <label>Enter a description:</label>
            <textarea name="description-textarea"></textarea>
            <br>
            <input type="checkbox" name="featured-checkbox" value="featured"> Featured
            <br>
            <input type="radio" name="priority-radio" value="high"> High
            <input type="radio" name="priority-radio" value="medium"> Medium
            <input type="radio" name="priority-radio" value="low"> Low
            <br>
            <button type="submit">Save</button>
        </form>
        <button id="edit-button">Edit</button>
    </div>

    <script>
        const resource = document.getElementById('resource');
        const editButton = document.getElementById('edit-button');

        editButton.addEventListener('click', function () {
            resource.classList.toggle('edit-mode');
        });

    </script>
