@using MockServer.Core.Enums
@model MockServer.WebMVC.Models.Project.CreateProjectViewModel
@{
    ViewData["Title"] = "Create new project";
}

<h1>@ViewData["Title"]</h1>

@* @using (Html.BeginForm("Create", "Projects", null, FormMethod.Post))
