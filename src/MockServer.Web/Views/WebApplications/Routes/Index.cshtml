@using MockServer.Core.WebApplications.Security
@using MockServer.Web.Controllers
@model MockServer.Web.Models.WebApplications.Routes.RouteIndexViewModel
@{
    ViewData["Title"] = Model.WebApplication.Name;
}
@section Scripts {
