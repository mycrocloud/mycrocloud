@model MockServer.Web.Models.WebApplications.WebApplicationCreateModel
@{
    ViewData["Title"] = "Create new web application";
}
<div class="row justify-content-center">
    <div class="col-6">
        <h1 class="fs-3">@ViewData["Title"]</h1>
        <form asp-action="Create" method="POST">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" type="text" asp-for="Name" autocomplete="off">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description"></label>
                <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                <small class="form-text text-muted">Add a brief summary about this application.</small>
            </div>
            <div class="mt-3 border-top pt-2">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>