@model string
@{
    var controller = (string)ViewContext.RouteData.Values["Controller"];
}
<div class="d-flex flex-column flex-shrink-0">
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a href="@Url.Action(nameof(WebAppController.View), WebAppController.Name, new { WebAppName = Model })"
                class="nav-link @(controller == WebAppController.Name ? "active": null) py-1" role="tab">Overview</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action(nameof(WebAppRouteController.Index), WebAppRouteController.Name, new { WebAppName = Model })"
                class="nav-link @(controller == WebAppRouteController.Name ? "active": null) py-1" role="tab">Routes</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action(nameof(WebAppAuthenticationController.SchemeList), WebAppAuthenticationController.Name, new { WebAppName = Model })"
                class="nav-link @(controller == WebAppAuthenticationController.Name ? "active": null) py-1"
                role="tab">Authentication</a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action(nameof(WebAppAuthorizationController.PolicyList), WebAppAuthorizationController.Name, new { WebAppName = Model })"
                class="nav-link @(controller == WebAppAuthorizationController.Name ? "active": null) py-1"
                role="tab">Authorization</a>
        </li>
    </ul>
</div>