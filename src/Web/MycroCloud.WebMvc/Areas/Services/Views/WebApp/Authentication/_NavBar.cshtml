@{
    var appName = (string)ViewData["WebAppName"];
    var action = ViewContext.RouteData.Values["action"].ToString();
}
<ul class="nav nav-tabs">
    @action
    <li class="nav-item">
        <a class="nav-link @(action == nameof(WebAppAuthenticationController.Configurations) ?"active": null)" href="@Url.Action(nameof(WebAppAuthenticationController.Configurations),"WebAppAuthentication", new { WebApplicationName = appName })">Configurations</a>
    </li>
    <li class="nav-item">
        @{
            var schemeAction = action.Equals("Schemes", StringComparison.OrdinalIgnoreCase) ||
                               action.Equals("newjwtbearerscheme", StringComparison.OrdinalIgnoreCase) ||
                               action.Equals("newapikeyscheme", StringComparison.OrdinalIgnoreCase);
        }
        <a class="nav-link @(schemeAction ?"active":"")" href="@Url.Action(nameof(WebAppAuthenticationController.SchemeList),"WebAppAuthentication", appName)">Schemes</a>
    </li>
</ul>