@model MycroCloud.WebMvc.Areas.Services.Models.WebApps.WebAppCreateViewModel
@{
    ViewData["Title"] = "Create new web application";
}
<small>
    <i class="bi bi-arrow-left"></i>
    <a href="@Url.Action(nameof(WebAppsController.Index), "WebApps")" class="text-decoration-none">Back to List</a>
</small>
<h1 class="fs-3">@ViewData["Title"]</h1>
<form asp-action="@nameof(WebAppsController.Create)" asp-controller="WebApps" method="POST">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" type="text" asp-for="Name" autocomplete="off" aria-autocomplete="none">
        <span class="text-danger" style="color: red" asp-validation-for="Name"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
        <small class="form-text text-muted">Add a brief summary about this application.</small>
    </div>
    <hr>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-secondary" type="button">Cancel</button>
    </div>
</form>