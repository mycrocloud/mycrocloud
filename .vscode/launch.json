            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_api",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/MockServer.ApiGateway/bin/Debug/net6.0/MockServer.ApiGateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MockServer.ApiGateway",
            "stopAtEntry": false,
