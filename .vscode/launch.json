{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MockServer.Web",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_web",
            "program": "${workspaceFolder}/src/MockServer.Web/bin/Debug/net6.0/MockServer.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/MockServer.Web",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS":"https://localhost:5002"
